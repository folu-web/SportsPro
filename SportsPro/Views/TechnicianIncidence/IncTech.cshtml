@model IEnumerable<SportsPro.Models.Incident>

@{
    ViewData["Title"] = "IncTech";
}

<h1>IncTech</h1>

<h3>Technician: @TempData["Name"]</h3>



<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Customer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateOpened)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Customer.FullName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Product.Name)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.DateOpened)
                </td>

                <td>
                    <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.IncidentID">Edit</a>

                </td>
            </tr>
        }
    </tbody>
</table>
<a class="btn btn-warning" href="@Url.Action("List", "UpdateIncident")">Switch Technician</a>

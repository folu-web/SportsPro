<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SportsPro</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
   
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-md navbar-dark bg-info">
            <a class="navbar-brand" href="#">
                <img src="/Images/logo3.png" width="100" height="50" class="d-inline-block align-top" alt="">
            </a>
            <button class="navbar-toggler" type="button"
                    data-toggle="collapse" data-target="#navbarSupportedContent"
                    aria-controls="navbarSupportedContent" aria-expanded="false"
                    aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <nav class="collapse navbar-collapse" id="navbarSupportedContent">
                <div class="navbar-nav mr-auto">
                    <a class="nav-item nav-link active" asp-controller="Home" asp-action="Index">Home</a>
                    @if (ViewData["Title"].ToString() == "Product")
                    {<a class="nav-link nav-item active text-success" asp-controller="Product" asp-action="List">Products</a> }
                    else
                    {<a class="nav-item nav-link " asp-controller="Product" asp-action="List">Products</a>}
                    @if (ViewData["Title"].ToString() == "List")
                    {<a class="nav-link nav-item active text-success" asp-controller="Technician" asp-action="List">Technician</a> }
                    else
                    {<a class="nav-item nav-link " asp-controller="Technician" asp-action="List">Technician</a>}
                    @if (ViewData["Title"].ToString() == "Customer")
                    {<a class="nav-link nav-item active text-success" asp-controller="Customer" asp-action="List">Customers</a> }
                    else
                    {<a class="nav-item nav-link " asp-controller="Customer" asp-action="List">Customers</a>}
                    @if (ViewData["Title"].ToString() == "Incident")
                    {<a class="nav-link nav-item active text-success" asp-controller="Incident" asp-action="List">Incidents</a> }
                    else
                    {<a class="nav-item nav-link " asp-controller="Incident" asp-action="List">Incidents</a>}
                    @if (ViewData["Title"].ToString() == "Registration")
                    {<a class="nav-link nav-item active text-success" asp-controller="Registration" asp-action="GetCustomer">Registrations</a> }
                    else
                    {<a class="nav-item nav-link " asp-controller="Registration" asp-action="GetCustomer">Registrations</a>}


                </div>
                <div class="navbar-nav navbar-right">
                    <partial name="_LoginPartial" />
                    <a class="nav-item nav-link active" asp-controller="Home" asp-action="About">About</a>
                </div>
            </nav>
        </nav>
    </header>
    <TempMessage Message=@TempData["message"]></TempMessage>
    @if (TempData.Keys.Contains("message"))
    {
        <h3 class="bg-danger text-center text-white p-2">@TempData["message"]</h3>
    }
    <div class="container">
        <main role="main" class="pb-5">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted  text-center">
        <div class="container">&copy; @DateTime.Now.Year - SportsPro Team3 All rights reserved</div>
    </footer>

    @RenderSection("Scripts", required: false)
</body>
</html>
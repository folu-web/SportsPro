        <div class="card">
            <div class="card-body">
                <h3 class="card-title">Admin</h3>
                <p class="card-text">
                    <div class="list-group">
                        <a asp-controller="Product" asp-action="List"
                           class="list-group-item">Manage Products</a>
                        <a asp-controller="Technician" asp-action="List"
                           class="list-group-item">Manage Technicians</a>
                        <a asp-controller="Customer" asp-action="List"
                           class="list-group-item">Manage Customers</a>
                        <a asp-controller="Incident" asp-action="List"
                           class="list-group-item">Manage Incidents</a>
                        <a asp-controller="Registration" asp-action="List"
                           class="list-group-item">Manage Registrations</a>
                    </div>

                    <h3>Technicians</h3>
                    <div class="list-group">
                        <a asp-controller="TechnicianIncidence" asp-action="List"
                           class="list-group-item">Update Incident</a>
                    </div>
                </p>
            </div>
        </div>
    </div>

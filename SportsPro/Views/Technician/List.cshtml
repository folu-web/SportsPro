@model IEnumerable<SportsPro.Models.Technician>

@{
    ViewData["Title"] = "List";
}

<h1>Technician Manager</h1>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.TechnicianID">Edit</a>
                <a class="btn btn-warning" asp-action="Delete" asp-route-id="@item.TechnicianID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

<p>
    <a class="btn btn-warning" asp-action="Create">Add New Technician</a>
</p>